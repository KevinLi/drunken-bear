    public void run(){
	BufferStrategy bs;
	Graphics g;
	bs = getBufferStrategy();
	if (bs == null){
	    createBufferStrategy(1);
	    return;
	}
	g=bs.getDrawGraphics();
	g.drawImage(_image, 0, getWidth(), getHeight(), null);
	g.dispose();
	bs.show();
    }
